<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.tthome.visneymanager.dao.SizeDao">

    <resultMap id="ProCategory" type="com.tthome.visneymanager.dao.ProCategoryDao">
        <result column="pro_category_id" property="proCategoryId"></result>
        <result column="pro_category_name" property="proCategoryName"></result>
        <result column="parent_id" property="parentId"></result>
    </resultMap>

    <select id="getAllProCategory" resultMap="ProCategory">
     SELECT * FROM pro_category limit #{start},#{end}
    </select>

    <select id="getAllProCategoryCount" resultType="int">
        select count(0) from pro_category
    </select>
    <!--add-->
    <insert id="getAllProCategory" >
        insert into pro_category values (0,#{proCategoryName},#{parentId})
    </insert>
    <!--update-->
    <update id="updateProCategory">
        update pro_category set pro_category_name=#{proCategoryName},parent_id=#{parentId}
        where pro_category_id=#{proCategoryId}
    </update>
    <delete id="deleteProCategory">
        delete  from pro_category
        where pro_category_id in
        <foreach collection="array" open="(" close=")" separator=","
                 item="id">#{id}
        </foreach>
    </delete>

</mapper>