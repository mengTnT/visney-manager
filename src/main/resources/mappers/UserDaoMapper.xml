<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.tthome.visneymanager.dao.UserDao">

    <resultMap id="BaseUser" type="com.tthome.visneymanager.entity.User">
        <result column="user_id" property="userId"></result>
        <result column="user_name" property="username"></result>
        <result column="user_password" property="password"></result>
    </resultMap>

    <select id="login" resultMap="BaseUser">
     SELECT * FROM tt_user where user_name=#{username} and user_password=#{password}
    </select>


</mapper>